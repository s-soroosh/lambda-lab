{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "module":"commonjs",
    "moduleResolution":"node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": ".build",
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}